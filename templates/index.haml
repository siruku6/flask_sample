-extends 'layout.html'
-block yield

  <!-- Form ============================== -->
  %h2 << ぼくは中身
  %a href='/break' <<  ブレークポイントへ
  %form action='/post_test' method='post'
    %input type='text' name='data'
    %input type='submit' value='postテスト'

  %form action='/create_db' method='get'
    %input.btn.btn-danger type='submit' value='DB作成'

  %form action='/' method='post'
    %label for='name' << 名前
    %input id='name' type='text' name='name'
    %input.btn.btn-info type='submit' value='レコード追加'

  %h2 << students list
  %table
    %tr
      %th << id
      %th << 名前
      %th << よみがな
      %th
      %th
    -for student in students
      %tr
        %td
          = student.id
        %td
          = student.name
        %td
          = student.kana
        %td
          %a href='/{{student.id}}'
            %button.btn.btn-success << 修正
        %td
          %form action= "/{{student.id}}" method='post'
            %input type='submit' class='btn btn-default' value='削除'
